<ul class="nav">
    <li class="nav-item">
        <a class="nav-link active" asp-action="Index" asp-controller="Home">Home</a>
    </li>
    <li class="nav-item">
        <a class="nav-link active" asp-action="About" asp-controller="Home">About</a>
    </li>

    @if (!User.Identity.IsAuthenticated)
    {
        @*Anonymous*@

        <li class="nav-item">
            <a class="nav-link active" asp-action="Register" asp-controller="Account">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" asp-action="SignIn" asp-controller="Account">Sign In</a>
        </li>
    }
    else
    {
        if (User.IsInRole("Landlord"))
        {
            @* Landlord *@
            <li class="nav-item">
                <a class="nav-link active" asp-action="List" asp-controller="Homes">Home List</a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" asp-action="List" asp-controller="Payment">Payments</a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" asp-action="Settings" asp-controller="Landlord">Profile</a>
            </li>
        }
        else
        {
            @*Tenants*@
            <li class="nav-item">
                <a class="nav-link active" asp-action="Index" asp-controller="Maintenance">Maintenance</a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" asp-action="Add" asp-controller="homes">Payment</a>
            </li>
        }
    }
</ul>